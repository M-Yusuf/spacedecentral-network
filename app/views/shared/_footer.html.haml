%footer.footer
  .container-fluid
    .row
      .col-md-4.visible-xs.mb-30
        %ul.socials.center-text
          %li
            = link_to 'ihttps://www.facebook.com/groups/spacedecentral/', title: 'Facebook' do
              = inline_svg('socials/facebook.svg')
          %li
            = link_to 'https://www.linkedin.com/company/17879935/' do
              = inline_svg('socials/linkedin.svg')
          %li
            = link_to 'https://blog.space.coop/', title: 'Medium' do
              = inline_svg('socials/medium.svg')
          %li
            = link_to 'https://twitter.com/spacecoopinc', title: 'Twitter' do
              = inline_svg('socials/twitter.svg')
